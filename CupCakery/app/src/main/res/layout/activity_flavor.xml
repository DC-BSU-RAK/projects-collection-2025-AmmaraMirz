<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cupcakebg2"
    tools:context=".FlavorActivity">

    <!-- Chocolate -->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Choose a flavor"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <ImageView
        android:id="@+id/chocolateButton"
        android:layout_width="159dp"
        android:layout_height="158dp"
        android:contentDescription="Chocolate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23"
        app:srcCompat="@drawable/chocolate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate"
        android:textColor="#474242"
        android:textSize="18sp"
        android:fontFamily="@font/bakbak_one"
        app:layout_constraintTop_toBottomOf="@id/chocolateButton"
        app:layout_constraintStart_toStartOf="@id/chocolateButton"
        app:layout_constraintEnd_toEndOf="@id/chocolateButton"
        android:layout_marginTop="4dp" />

    <!-- Caramel Drip -->

    <ImageView
        android:id="@+id/caramelButton"
        android:layout_width="161dp"
        android:layout_height="157dp"
        android:contentDescription="Caramel Drip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.876"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229"
        app:srcCompat="@drawable/carameldrip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caramel Drip"
        android:textColor="#474242"
        android:textSize="18sp"
        android:fontFamily="@font/bakbak_one"
        app:layout_constraintTop_toBottomOf="@id/caramelButton"
        app:layout_constraintStart_toStartOf="@id/caramelButton"
        app:layout_constraintEnd_toEndOf="@id/caramelButton"
        android:layout_marginTop="4dp" />

    <!-- Birthday Special -->

    <ImageView
        android:id="@+id/birthdayButton"
        android:layout_width="154dp"
        android:layout_height="149dp"
        android:contentDescription="Birthday Special"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553"
        app:srcCompat="@drawable/birthdayspecial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday Special"
        android:textColor="#474242"
        android:textSize="18sp"
        android:fontFamily="@font/bakbak_one"
        app:layout_constraintTop_toBottomOf="@id/birthdayButton"
        app:layout_constraintStart_toStartOf="@id/birthdayButton"
        app:layout_constraintEnd_toEndOf="@id/birthdayButton"
        android:layout_marginTop="4dp" />

    <!-- Mixberry -->

    <ImageView
        android:id="@+id/mixberryButton"
        android:layout_width="158dp"
        android:layout_height="149dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Mixberry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/caramelButton"
        app:layout_constraintVertical_bias="0.175"
        app:srcCompat="@drawable/mixberry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mixberry"
        android:textColor="#474242"
        android:textSize="18sp"
        android:fontFamily="@font/bakbak_one"
        app:layout_constraintTop_toBottomOf="@id/mixberryButton"
        app:layout_constraintStart_toStartOf="@id/mixberryButton"
        app:layout_constraintEnd_toEndOf="@id/mixberryButton"
        android:layout_marginTop="4dp" />

    <!-- Strawberry -->

    <ImageView
        android:id="@+id/strawberryButton"
        android:layout_width="160dp"
        android:layout_height="159dp"
        android:contentDescription="Strawberry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882"
        app:srcCompat="@drawable/strawberry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strawberry"
        android:textColor="#474242"
        android:textSize="18sp"
        android:fontFamily="@font/bakbak_one"
        app:layout_constraintTop_toBottomOf="@id/strawberryButton"
        app:layout_constraintStart_toStartOf="@id/strawberryButton"
        app:layout_constraintEnd_toEndOf="@id/strawberryButton"
        android:layout_marginTop="4dp" />

    <!-- Lemon Zest -->

    <ImageView
        android:id="@+id/lemonButton"
        android:layout_width="162dp"
        android:layout_height="162dp"
        android:contentDescription="Lemon Zest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887"
        app:srcCompat="@drawable/lemon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lemon Zest"
        android:textColor="#474242"
        android:textSize="18sp"
        android:fontFamily="@font/bakbak_one"
        app:layout_constraintTop_toBottomOf="@id/lemonButton"
        app:layout_constraintStart_toStartOf="@id/lemonButton"
        app:layout_constraintEnd_toEndOf="@id/lemonButton"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
